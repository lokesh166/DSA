#include<iostream>
using namespace std;

int powerOfTwo(int n){
    if(n == 0){
        return 1;
    }
    return 2*powerOfTwo(n-1);
}



int main(){
    
    int n;
    cin>>n;
    int ans = powerOfTwo(n);
    cout << ans;
    return 0;
}







only check is power of two or not and return true and false 

class Solution {
public:
    bool isPowerOfTwo(int n) {
        if(n == 0) return false;
        return ((n == 1) || ((n%2 == 0) && isPowerOfTwo(n/2)));
    }
};
